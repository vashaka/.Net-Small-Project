@model List<Product>;


<p class="pb-10">@TempData["success"]</p>


@foreach (var Product in Model)
{
    <form method="post" class="">
    <div class="">
        <h1 class="text-2xl font-bold text-red-400">@Product.Title</h1>
        <p>@Product.Description</p>
        <p class="text-red-500">@Product.Price$</p>
    </div>
    <button asp-action="Delete" asp-route-Id="@Product.Id" type="submit" class="btn-cust">Delete</button>
</form>
    <hr />
}
<div class="flex justify-end">
    <a class="text-white text-decoration-none bg-blue-500 px-6 py-3 text-xl font-semibold rounded-lg"
        asp-asp-controller="Product" asp-action="create">
        Create a Product
    </a>
</div>
